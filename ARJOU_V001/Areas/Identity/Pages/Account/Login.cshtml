@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<!-- Contenedor Principal del Login -->
<div class="login-container">
    <img src="~/images/logo_trans.png" alt="Logo de la empresa" class="logo" /> <!-- Añadir el logo -->
    <h1>@ViewData["Title"]</h1>

    <!-- Sección del Formulario de Inicio de Sesión -->
    <div class="login-form-wrapper">
        <section>
            <form id="account" method="post">
                <h4>Accede a tu cuenta</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <!-- Email -->
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Tu correo electrónico" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Contraseña -->
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Tu contraseña" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Recordarme -->
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Recordarme
                        </label>
                    </div>
                </div>

                <!-- Botón de Iniciar Sesión -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                </div>

                <!-- Enlaces de ayuda -->
                <div class="help-links">
                    <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar una nueva cuenta</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo</a>
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Estilos personalizados -->
<style>
    /* Contenedor principal del formulario */
    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
        width: 90%;
        max-width: 400px;
        margin: 50px auto;
        text-align: center;
        color: #000;
    }

    /* Logo */
    .logo {
        width: 100px;
        margin-bottom: 20px;
    }

    /* Título */
    h1 {
        font-size: 2.5em;
        color: #000;
        margin-bottom: 15px;
    }

    /* Sección del formulario */
    .login-form-wrapper {
        width: 100%;
    }

    /* Estilos de los inputs y labels */
    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #000;
        padding: 12px;
        background-color: #fff;
        color: #000;
    }

    label {
        font-weight: bold;
        color: #000;
    }

    /* Botón principal */
    .btn-primary {
        background-color: #000;
        border-color: #000;
        width: 100%;
        font-size: 1em;
        padding: 12px;
        border-radius: 8px;
        color: #fff;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #333;
            border-color: #333;
        }

    /* Estilos de ayuda */
    .help-links {
        margin-top: 15px;
        font-size: 0.9em;
    }

        .help-links a {
            display: block;
            color: #000;
            margin-top: 5px;
            text-decoration: underline;
            transition: color 0.3s ease;
        }

            .help-links a:hover {
                color: #555;
            }

    /* Botones para login externo */
    .external-login {
        width: 100%;
        margin-top: 20px;
        text-align: center;
    }

    .external-providers .btn-secondary {
        background-color: #333;
        border-color: #333;
        margin-top: 10px;
        width: 100%;
        font-size: 0.9em;
        padding: 10px;
        border-radius: 8px;
        color: #fff;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #000;
        border-color: #000;
    }

    /* Validaciones */
    .text-danger {
        color: #e3342f;
    }
</style>
