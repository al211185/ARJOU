@page
@model RegisterModel
@{
    ViewData["Title"] = "Regístrate";
}

<!-- Contenedor Principal del Registro -->
<div class="register-container">
    <img src="~/images/logo_trans.png" alt="Logo de la empresa" class="logo" /> <!-- Añadir el logo -->
    <h1>@ViewData["Title"]</h1>

    <div class="form-wrapper">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crea una nueva cuenta</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Nombre -->
            <div class="form-group">
                <label asp-for="Input.Nombre"></label>
                <input asp-for="Input.Nombre" class="form-control" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>

            <!-- Apellido -->
            <div class="form-group">
                <label asp-for="Input.Apellido"></label>
                <input asp-for="Input.Apellido" class="form-control" />
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>

            <!-- Dirección -->
            <div class="form-group">
                <label asp-for="Input.Direccion"></label>
                <input asp-for="Input.Direccion" class="form-control" />
                <span asp-validation-for="Input.Direccion" class="text-danger"></span>
            </div>

            <!-- Teléfono -->
            <div class="form-group">
                <label asp-for="Input.ClienteTelefono"></label>
                <input asp-for="Input.ClienteTelefono" class="form-control" />
                <span asp-validation-for="Input.ClienteTelefono" class="text-danger"></span>
            </div>

            <!-- Correo Electrónico -->
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Contraseña -->
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirmar Contraseña -->
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Registrarse</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Estilos personalizados -->
<style>
    /* Fondo y centrado */
    .register-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.15);
        width: 90%;
        max-width: 500px;
        margin: 0 auto;
        color: #000;
    }

    /* Logo */
    .logo {
        width: 150px;
        margin-bottom: 20px;
    }

    /* Título */
    h1 {
        font-size: 2em;
        color: #000;
        margin-bottom: 20px;
    }

    /* Wrapper del formulario */
    .form-wrapper {
        width: 100%;
    }

    /* Estilos de los inputs y labels */
    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #000;
        padding: 10px;
        background-color: #fff;
        color: #000;
    }

    label {
        font-weight: bold;
        color: #000;
    }

    /* Botón */
    .btn-primary {
        background-color: #000;
        border-color: #000;
        width: 100%;
        font-size: 1em;
        padding: 10px;
        border-radius: 5px;
        color: #fff;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #333;
        border-color: #333;
    }

    /* Validaciones */
    .text-danger {
        color: #e3342f;
    }
</style>
