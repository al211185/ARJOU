@model ARJOU_V001.Models.Pedido

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="container d-flex justify-content-center align-items-center mt-5" style="min-height: 70vh;">
    <div class="text-center" style="max-width: 600px; background-color: #fff; padding: 2rem; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);">
        <h1 class="font-weight-bold" style="color: #000;">Eliminar Pedido</h1>
        <h3 style="color: #000;">¿Estás seguro de que deseas eliminar este pedido?</h3>
        <hr />

        <dl class="row justify-content-center">
            <dt class="col-sm-4 text-right font-weight-bold" style="color: #333;">
                @Html.DisplayNameFor(model => model.EstiloDeseado)
            </dt>
            <dd class="col-sm-8" style="color: #666;">
                @Html.DisplayFor(model => model.EstiloDeseado)
            </dd>

            <dt class="col-sm-4 text-right font-weight-bold" style="color: #333;">
                @Html.DisplayNameFor(model => model.ColorDeseado)
            </dt>
            <dd class="col-sm-8" style="color: #666;">
                @Html.DisplayFor(model => model.ColorDeseado)
            </dd>

            <dt class="col-sm-4 text-right font-weight-bold" style="color: #333;">
                @Html.DisplayNameFor(model => model.LongitudDeseada)
            </dt>
            <dd class="col-sm-8" style="color: #666;">
                @Html.DisplayFor(model => model.LongitudDeseada)
            </dd>

            <dt class="col-sm-4 text-right font-weight-bold" style="color: #333;">
                @Html.DisplayNameFor(model => model.DescripcionAdicional)
            </dt>
            <dd class="col-sm-8" style="color: #666;">
                @Html.DisplayFor(model => model.DescripcionAdicional)
            </dd>

            <dt class="col-sm-4 text-right font-weight-bold" style="color: #333;">
                @Html.DisplayNameFor(model => model.ImagenReferencia)
            </dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.ImagenReferencia))
                {
                    <img src="~/images/@Model.ImagenReferencia" alt="Imagen de Referencia" style="max-height: 150px; border-radius: 8px; border: 1px solid #333;" />
                }
                else
                {
                    <p style="color: #999;">No hay imagen de referencia</p>
                }
            </dd>

            <dt class="col-sm-4 text-right font-weight-bold" style="color: #333;">
                @Html.DisplayNameFor(model => model.PrecioEstimado)
            </dt>
            <dd class="col-sm-8" style="color: #666;">
                @Html.DisplayFor(model => model.PrecioEstimado)
            </dd>

            <dt class="col-sm-4 text-right font-weight-bold" style="color: #333;">
                @Html.DisplayNameFor(model => model.FechaSolicitud)
            </dt>
            <dd class="col-sm-8" style="color: #666;">
                @Html.DisplayFor(model => model.FechaSolicitud)
            </dd>

            <dt class="col-sm-4 text-right font-weight-bold" style="color: #333;">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-8" style="color: #666;">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>

        <div class="text-center mt-4">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger" style="border-radius: 8px;">Eliminar</button>
            </form>
            <a asp-action="Index" class="btn btn-outline-dark ml-2" style="border-radius: 8px;">Volver a la Lista</a>
        </div>
    </div>
</div>
